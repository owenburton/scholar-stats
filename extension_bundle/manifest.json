{
    "manifest_version": 2,
    "name": "Scholar Stats",
    "version": "1.0",
    "background":{
        "scripts": ["background.js"]
      },
    "browser_action": {
        "default_icon": "icon.png",
        "persistent": true
    },
    "content_scripts": [
        {
          "matches": [
            "*://scholar.google.com/citations?user*"
          ],
          "js": ["content.js"]
        }
      ]
}